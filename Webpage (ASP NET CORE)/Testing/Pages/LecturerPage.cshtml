@page
@model Test.Pages.LecturerPageModel
@{
    Layout = null;
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/css/mtr-datepicker.min.css">
<link rel="stylesheet" type="text/css" href="~/css/mtr-datepicker.default-theme.min.css">
<link rel="stylesheet" href="~/css/main.css">
<script type="text/javascript" src="~/js/mtr-datepicker.min.js"></script>

<body>
    <div class="container">
        <div class="wrapper">
            <form class="form-signin" method="post">
                <h2>Enter the Date/Time for the OTP</h2>
                <div id="datepicker" ></div>
                <button class="btn btn-lg btn-primary btn-block" type="Submit">Submit</button>
                <input type="hidden" id="datetime" asp-for="dateTime"/>
            </form>
        </div>
    </div>
</body>


<script>
    var config = {
        target: 'datepicker',
        smartHours: true,
        animations: true,
        minutes: {
            step: 1
        }
    };
    var myDatepicker = new MtrDatepicker(config);
    datetime.value = myDatepicker.toLocaleString();
    console.log(myDatepicker.toLocaleString());

    var datepickerOutputElement = document.getElementById('datetime');
    datepickerChange(datepickerOutputElement, myDatepicker);
    myDatepicker.onChange('all', function () {
        datepickerChange(datepickerOutputElement, myDatepicker);
    });

    function datepickerChange(resultElement, datepicker) {
        datetime.value = myDatepicker.toGMTString();
    }
    

</script>


